            <a href="/mission" style="float:left;">Learn more about our mission ></a>
            <a href="/mission#about" style="float:right;">Learn more about the hospital ></a>
          </div>
          <div class="four columns fundraiser">
          </div>
        </div>


        <div class="container latestnews">
          <h4><u>Latest News</u></h4>
          <% for (var i = 0; i < cardimg.length; i++) { %>
          <a class="four columns card" href="<%= cardlink[i] %>">
            <img src="<%= cardimg[i] %>"/>
            <h5><%= cardtitle[i] %></h5>
            <p class="cardcopy"><%= cardcopy[i] %></p>
          </a>
          <% } %>
        </div>

        <script type="text/javascript">
          $('.cardcopy').ellipsis({
            row: 3
          });
        </script>



        <div class="honorary container">
          <div class="left arrow" ><h4><</h4></div>
          <div class="right arrow"><h4>></h4></div>
          
          <h4><u>Meet the Honorary Board</u></h4>
          <div class="inner-container">
            <% var panels = Math.ceil(boardimg.length/4); %>
            <div class="content-container" style="width: <%= panels *100 %>%;)">
              <% for (var i = 0; i < boardimg.length; i++) { %>
              <div class="three columns board">
                <img src="<%= boardimg[i] %>"/>
              </div>
              <% } %>

            </div>
          </div>
        </div>

        <script type="text/javascript">
          var currentpanel = 0;
          $('.right').click(function(){
            if(currentpanel < <%= panels - 1 %>){
            var scroll = $('.inner-container').width();
            scroll += currentpanel*scroll;
            currentpanel++;
            $('.board').each(function() {
              $(this).animate({
               left: scroll * -1
             }, 500);
            })
          }
          });
        
          $('.left').click(function(){
             if(currentpanel > 0 ){
            var scroll = $('.inner-container').width();
             scroll -= currentpanel*scroll;
            currentpanel--;
            $('.board').each(function() {
              $(this).animate({
               left: scroll
             }, 500);
            })
          }
          });
        

        </script>
      </div>
      <div class="sponsors"></div>
    </div>
    <!-- END PAGE -->






    <% include partials/loh-footer %>
